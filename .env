# ============================================================================
# LOCAL TESTING ENVIRONMENT VARIABLES
# Copy this to .env and fill in your values
# ============================================================================

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# LLM Provider (OpenRouter recommended for free tier)
USE_OPENROUTER=true
PROVIDER=openrouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Alternative: OpenAI
# USE_OPENROUTER=false
# PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here

# LLM Settings
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Observability (Optional - can disable for local testing)
OPIK_ENABLED=false
# OPIK_API_KEY=your_opik_api_key_here
# OPIK_WORKSPACE=your_workspace
# OPIK_PROJECT=multi-agent-local-test

# Caching (Recommended)
CACHE_ENABLED=true
REDIS_ENABLED=false  # Use in-memory cache for local testing

# Rate Limiting (Optional - can disable for local testing)
USE_IMPROVED_RATE_LIMITER=false
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_MAX_WAIT_SECONDS=30

# Fallback
FALLBACK_ENABLED=true

# Supabase (Required for user lookup and conversation storage)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# Twilio (Required for SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# User Phone Numbers (for testing)
USER_PHONE_NUMBER=+1234567890
USER_PHONE_NUMBER_USER2=+0987654321

# Harvest API (Required for timesheet data)
HARVEST_ACCESS_TOKEN=your_harvest_token_here
HARVEST_ACCOUNT_ID=your_harvest_account_id_here
HARVEST_ACCESS_TOKEN_USER2=your_harvest_token_user2_here
HARVEST_ACCOUNT_ID_USER2=your_harvest_account_id_user2_here

# Gmail (Optional - for email responses)
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASSWORD=your_app_password_here

# Azure Key Vault (Optional - can skip for local testing)
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application URL
APP_URL=http://localhost:8003

# Logging
LOG_LEVEL=INFO

# ============================================================================
# ➕ NEW: RAG (Retrieval-Augmented Generation) Configuration
# ============================================================================

# RAG Feature Flag (Set to true to enable long-term memory)
RAG_ENABLED=true

# Vector Database Provider (pinecone, weaviate, qdrant)
VECTOR_DB_PROVIDER=qdrant

# Pinecone Configuration (if using Pinecone)
QDRANT_URL=http://localhost:6333
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=timesheet-memory

# Embeddings Provider (openai, cohere, huggingface)
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-small
EMBEDDINGS_DIMENSION=1536

# Memory Retrieval Settings
MEMORY_RETRIEVAL_K=5
MEMORY_RETRIEVAL_METHOD=mmr
MEMORY_MMR_DIVERSITY=0.5

# ============================================================================
# ➕ NEW: Tool Registry Configuration
# ============================================================================

# Tool Registry Feature Flag (Set to true to enable unified tool registry)
TOOL_REGISTRY_ENABLED=false

# Tool Registry Cache TTL (seconds)
TOOL_REGISTRY_CACHE_TTL=3600

# Tool Credentials Encryption Key (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
TOOL_CREDENTIALS_ENCRYPTION_KEY=your_fernet_key_here
QDRANT_COLLECTION_NAME=timesheet_memory
